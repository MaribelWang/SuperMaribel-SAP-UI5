<mvc:View 
    controllerName="project1.controller.View"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true">
    <App id="app">
        <pages>
            <Page id="page" title="{i18n>homePageTitle}">
                <content>
                    <Panel id="greetingPanel"
                    headerText="{i18n>helloPanelTitle}">
                        <content>
                            <Button id="greetingButton" text="{i18n>showHelloButtonText}" press=".onSayHiButtonPress"></Button>
                            <Input id="oModelName" value="{/recipient/name}" description="Hello {/recipient/name}" valueLiveUpdate="true" width="60%"/>
                        </content>
                    </Panel>
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>